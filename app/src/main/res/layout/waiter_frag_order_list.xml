<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.sujan.info.thespicelounge.WaiterActivity">


    <LinearLayout
        android:id="@+id/ordered_item_table_columns"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/a"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:text="S/n"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/textAppearance_mdpi_16_sp"
            />



        <TextView
            android:id="@+id/ordered_item"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Item"
            android:textSize="@dimen/textAppearance_mdpi_16_sp"
            android:textColor="@color/colorPrimaryDark"
            />



        <TextView
            android:id="@+id/f"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Price"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/textAppearance_mdpi_16_sp"
            />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Qty"
            android:textColor="#000"
            android:textSize="@dimen/textAppearance_mdpi_16_sp"
            />


        <TextView
            android:id="@+id/r"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/textAppearance_mdpi_16_sp"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ordered_item_table_columns"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/waiter_orders_list_recycler"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/ordered_item_table_columns"
        android:layout_height="wrap_content"/>

</RelativeLayout>
